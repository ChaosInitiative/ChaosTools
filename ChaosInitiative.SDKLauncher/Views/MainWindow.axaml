<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ChaosInitiative.SDKLauncher.ViewModels"
        mc:Ignorable="d"
        x:Class="ChaosInitiative.SDKLauncher.Views.MainWindow"
		Width="300" Height="450"
		CanResize="False"
		WindowStartupLocation="CenterScreen"
		Icon="/Assets/p2ce_logo.png"
        Title="SDK Launcher"
        Closing="OnClosing">

	<Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>

	<DockPanel>
		<StackPanel DockPanel.Dock="Top" 
					VerticalAlignment="Top">
			
			<TextBlock>Tools:</TextBlock>
			<Button Command="{Binding OnClickHammer}">Hammer World Editor</Button>
			<Button Command="{Binding OnClickToolsMode}">Launch Game (Tools Mode)</Button>
			<Button Command="{Binding OnClickModelViewer}">Model Viewer</Button>
			
			<TextBlock>Mods:</TextBlock>
			<Button Command="{Binding OnClickCreateMod}">Create Mod</Button>
			
		</StackPanel>

		<Grid DockPanel.Dock="Bottom" VerticalAlignment="Bottom">

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<TextBlock Grid.Row="0"
			           Grid.Column="0"
			           Grid.ColumnSpan="4">
				Workspace Profiles
			</TextBlock>
			
			<Button Grid.Row="1"
					Grid.Column="0"
					Classes="IconButton"
					Command="{Binding OnClickCreateProfile}">
				<Image Source="/Assets/plus_math_16px.png"></Image>
			</Button>
			<Button Grid.Row="1"
					Grid.Column="1"
					Classes="IconButton"
					Command="{Binding OnClickDeleteProfile}">
				<Image Source="/Assets/subtract_16px.png"></Image>
			</Button>
			<Button Grid.Row="1"
			        Grid.Column="2" 
					Classes="IconButton"
			        Command="{Binding OnClickOpenProfileConfig}">
				<Image Source="/Assets/edit_16px.png"></Image>
			</Button>
			
			<ComboBox Grid.Row="2"
			          Grid.Column="0"
			          Grid.ColumnSpan="4"
			          Items="{Binding Profiles}" 
			          SelectedIndex="{Binding CurrentProfileIndex}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}"/>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			
		</Grid>
	</DockPanel>

</Window>
