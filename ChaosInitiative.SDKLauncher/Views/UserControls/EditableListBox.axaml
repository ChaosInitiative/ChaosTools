<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
             x:Class="ChaosInitiative.SDKLauncher.Views.UserControls.EditableListBox">
             
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Orientation="Vertical">
            
            <Button Classes="SmallButton">
                <Image Source="/Assets/Add_white_16x.png"/>
            </Button>
            
            <Button Classes="SmallButton">
                <Image Source="/Assets/Remove_white_16x.png"/>
            </Button>
            
        </StackPanel>
        
        <ListBox Grid.Column="1">
            
        </ListBox>
    </Grid>
    
</UserControl>